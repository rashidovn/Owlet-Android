<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_main_category_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/volume_key"
            android:title="@string/pref_sound_title" />

        <ListPreference
            android:defaultValue="@string/pref_lang_default"
            android:dialogTitle="@string/pref_lang_dialog_title"
            android:entries="@array/entries_lang"
            android:entryValues="@array/values_lang"
            android:key="@string/language_key"
            android:title="@string/pref_lang_title" />
    </PreferenceCategory>

</PreferenceScreen>